<style>
  /* Home Page Hero Styles */
  .home-hero {
    padding: 6rem 0 4rem;
    background: linear-gradient(
      135deg,
      rgba(99, 102, 241, 0.1),
      rgba(139, 92, 246, 0.1)
    );
    overflow: hidden;
    position: relative;
  }

  .home-hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
        circle at 20% 80%,
        rgba(99, 102, 241, 0.15) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 20%,
        rgba(139, 92, 246, 0.15) 0%,
        transparent 50%
      );
    z-index: 0;
  }

  .home-hero .container {
    position: relative;
    z-index: 1;
  }

  .home-hero-content {
    display: flex;
    align-items: center;
    gap: 4rem;
    margin-bottom: 4rem;
  }

  .home-hero-text {
    flex: 1;
  }

  .home-hero-visual {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .home-hero-title {
    font-size: 3.5rem;
    font-weight: 900;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
  }

  .home-hero-subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    line-height: 1.6;
    max-width: 600px;
  }

  .home-hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .home-hero-actions .btn-primary {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .code-visual {
    background: var(--bg-card);
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    border: 1px solid var(--border);
    max-width: 500px;
    width: 100%;
  }

  .code-window {
    background: #1a1b26;
    border-radius: 0.75rem;
    overflow: hidden;
  }

  .code-header {
    background: #24283b;
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #414868;
  }

  .code-dots {
    display: flex;
    gap: 0.5rem;
  }

  .code-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .code-dot.red {
    background: #ff5f56;
  }
  .code-dot.yellow {
    background: #ffbd2e;
  }
  .code-dot.green {
    background: #27ca3f;
  }

  .code-title {
    color: #a9b1d6;
    font-family: "Courier New", monospace;
    font-size: 0.9rem;
  }

  .code-content {
    padding: 1.5rem;
  }

  .code-content pre {
    margin: 0;
    overflow-x: auto;
  }

  .code-content code {
    font-family: "Fira Code", "Courier New", monospace;
    font-size: 0.9rem;
    line-height: 1.5;
    color: #9dccff;
  }

  .code-content .keyword {
    color: #c792ea;
  }
  .code-content .function {
    color: #82aaff;
  }
  .code-content .string {
    color: #c3e88d;
  }
  .code-content .comment {
    color: #546e7a;
  }
  .code-content .number {
    color: #f78c6c;
  }

  .home-hero-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    padding-top: 3rem;
    border-top: 1px solid var(--border);
  }

  .hero-stat {
    text-align: center;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 1rem;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s;
  }

  .hero-stat:hover {
    transform: translateY(-5px);
    border-color: var(--primary);
    box-shadow: 0 10px 30px rgba(99, 102, 241, 0.2);
  }

  .hero-stat-number {
    font-size: 3rem;
    font-weight: 900;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
  }

  .hero-stat-label {
    color: var(--text-muted);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 600;
  }

  /* Existing styles for other sections */
  .about-on-home {
    padding: 6rem 0;
    background: linear-gradient(180deg, transparent, rgba(99, 102, 241, 0.05));
  }

  .about-content {
    display: flex;
    align-items: center;
    gap: 4rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .about-image {
    flex: 0 0 300px;
  }

  .about-image img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 1rem;
    border: 3px solid var(--primary);
    box-shadow: 0 20px 40px var(--shadow);
  }

  .about-text {
    flex: 1;
  }

  .about-text h3 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
  }

  .about-text p {
    color: var(--text-secondary);
    line-height: 1.8;
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
  }

  .quick-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }

  .quick-stat {
    text-align: center;
    padding: 1.5rem;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 1rem;
    transition: all 0.3s;
  }

  .quick-stat:hover {
    border-color: var(--primary);
    transform: translateY(-5px);
    box-shadow: 0 10px 30px var(--shadow);
  }

  .quick-stat strong {
    display: block;
    font-size: 2.5rem;
    font-weight: 900;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
  }

  .quick-stat span {
    color: var(--text-muted);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .featured-projects {
    padding: 6rem 0;
  }

  .view-all {
    text-align: center;
    margin-top: 3rem;
  }

  .services {
    padding: 6rem 0;
    background: linear-gradient(180deg, transparent, rgba(99, 102, 241, 0.05));
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .service-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 1rem;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s;
  }

  .service-card:hover {
    border-color: var(--primary);
    transform: translateY(-5px);
    box-shadow: 0 20px 40px var(--shadow);
  }

  .service-icon {
    background: rgba(99, 102, 241, 0.1);
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: var(--primary);
  }

  .service-card h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .service-card p {
    color: var(--text-secondary);
    line-height: 1.6;
  }

  /* Updated CTA Section */
  .cta {
    padding: 6rem 0;
    text-align: center;
    background: linear-gradient(
      135deg,
      rgba(99, 102, 241, 0.1),
      rgba(139, 92, 246, 0.1)
    );
  }

  .cta h2 {
