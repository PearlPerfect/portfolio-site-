<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>
    <%- include('partials/navbar', { activePage: '' }) %>

    <!-- Project Detail Section -->
    <section class="project-detail">
        <div class="container">
            <!-- Back Button -->
            <a href="/" class="back-btn">‚Üê Back to Projects</a>

            <!-- Project Header -->
            <div class="detail-header">
                <span class="detail-stage"><%= project.stage %></span>
                <h1 class="detail-title"><%= project.title %></h1>
                <p class="detail-description"><%= project.description %></p>
                
                <div class="detail-actions">
                    <a href="<%= project.liveUrl %>" target="_blank" class="btn-primary">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                            <polyline points="15 3 21 3 21 9"/>
                            <line x1="10" y1="14" x2="21" y2="3"/>
                        </svg>
                        Live Demo
                    </a>
                    <a href="<%= project.githubUrl %>" target="_blank" class="btn-secondary">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                        View Code
                    </a>
                    <% if (project.apiDocs) { %>
                    <a href="<%= project.apiDocs %>" target="_blank" class="btn-secondary">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                            <polyline points="14 2 14 8 20 8"/>
                            <line x1="16" y1="13" x2="8" y2="13"/>
                            <line x1="16" y1="17" x2="8" y2="17"/>
                            <polyline points="10 9 9 9 8 9"/>
                        </svg>
                        API Docs
                    </a>
                    <% } %>
                    <% if (project.blogPost) { %>
                    <a href="<%= project.blogPost %>" target="_blank" class="btn-secondary">Blog Post</a>
                    <% } %>
                </div>
            </div>

            <div class="detail-content">
                <!-- Technologies -->
                <div class="detail-section">
                    <h2 class="detail-section-title">Technologies Used</h2>
                    <div class="tech-grid">
                        <% project.technologies.forEach(tech => { %>
                        <span class="tech-badge"><%= tech %></span>
                        <% }) %>
                    </div>
                </div>

                <!-- Features -->
                <div class="detail-section">
                    <h2 class="detail-section-title">Key Features</h2>
                    <ul class="feature-list">
                        <% project.features.forEach(feature => { %>
                        <li>
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <polyline points="20 6 9 17 4 12"/>
                            </svg>
                            <%= feature %>
                        </li>
                        <% }) %>
                    </ul>
                </div>

                <!-- API Endpoints -->
                <% if (project.keyEndpoints && project.keyEndpoints.length > 0) { %>
                <div class="detail-section">
                    <h2 class="detail-section-title">API Endpoints</h2>
                    <div class="endpoints-list">
                        <% project.keyEndpoints.forEach(endpoint => { %>
                        <code class="endpoint-code"><%= endpoint %></code>
                        <% }) %>
                    </div>
                </div>
                <% } %>

                <!-- Challenges -->
                <div class="detail-section">
                    <h2 class="detail-section-title">Technical Challenges</h2>
                    <ul class="challenge-list">
                        <% project.challenges.forEach(challenge => { %>
                        <li>
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <circle cx="12" cy="12" r="10"/>
                                <line x1="12" y1="8" x2="12" y2="12"/>
                                <line x1="12" y1="16" x2="12.01" y2="16"/>
                            </svg>
                            <%= challenge %>
                        </li>
                        <% }) %>
                    </ul>
                </div>

                <!-- Learnings -->
                <div class="detail-section">
                    <h2 class="detail-section-title">Key Learnings</h2>
                    <ul class="learning-list">
                        <% project.learnings.forEach(learning => { %>
                        <li>
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/>
                                <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>
                            </svg>
                            <%= learning %>
                        </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>
</body>
</html>