<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>
    <%- include('partials/navbar', { activePage: 'api-docs' }) %>

    <!-- API Documentation Section -->
    <section class="api-docs-section">
        <div class="container">
            <div class="api-hero">
                <h1 class="section-title">Project API Documentation</h1>
                <p class="section-subtitle">Access comprehensive API documentation for each project</p>
            </div>

            <!-- Projects with API Docs -->
            <div class="docs-grid">
                <% projects.forEach(project => { %>
                    <% if (project.apiDocs) { %>
                    <div class="doc-card">
                        <div class="doc-header">
                            <span class="doc-stage"><%= project.stage %></span>
                            <div class="doc-links">
                                <a href="<%= project.githubUrl %>" target="_blank" class="icon-link" title="GitHub">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                                    </svg>
                                </a>
                                <a href="<%= project.liveUrl %>" target="_blank" class="icon-link" title="Live Demo">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                                        <polyline points="15 3 21 3 21 9"/>
                                        <line x1="10" y1="14" x2="21" y2="3"/>
                                    </svg>
                                </a>
                            </div>
                        </div>
                        
                        <h3 class="doc-title"><%= project.title %></h3>
                        <p class="doc-description"><%= project.description %></p>
                        
                        <div class="doc-tech">
                            <% project.technologies.slice(0, 3).forEach(tech => { %>
                            <span class="tech-badge"><%= tech %></span>
                            <% }) %>
                            <% if (project.technologies.length > 3) { %>
                            <span class="tech-badge more">+<%= project.technologies.length - 3 %></span>
                            <% } %>
                        </div>

                        <% if (project.keyEndpoints && project.keyEndpoints.length > 0) { %>
                        <div class="doc-endpoints">
                            <h4>Key Endpoints:</h4>
                            <ul>
                                <% project.keyEndpoints.slice(0, 3).forEach(endpoint => { %>
                                <li><code><%= endpoint.split(' - ')[0] %></code></li>
                                <% }) %>
                                <% if (project.keyEndpoints.length > 3) { %>
                                <li class="more-endpoints">+<%= project.keyEndpoints.length - 3 %> more</li>
                                <% } %>
                            </ul>
                        </div>
                        <% } %>
                        
                        <div class="doc-actions">
                            <a href="<%= project.apiDocs %>" target="_blank" class="btn-primary">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                                    <polyline points="14 2 14 8 20 8"/>
                                    <line x1="16" y1="13" x2="8" y2="13"/>
                                    <line x1="16" y1="17" x2="8" y2="17"/>
                                    <polyline points="10 9 9 9 8 9"/>
                                </svg>
                                View API Documentation
                            </a>
                            <a href="/projects/<%= project.id %>" class="btn-secondary">
                                Project Details
                            </a>
                        </div>
                    </div>
                    <% } %>
                <% }) %>
            </div>

            <!-- Projects without API Docs -->
            <% 
            const projectsWithoutDocs = projects.filter(p => !p.apiDocs);
            if (projectsWithoutDocs.length > 0) { 
            %>
            <div class="no-docs-section">
                <h2 class="section-heading">Projects Without API Documentation</h2>
                <p class="section-note">These projects don't have separate API documentation pages, but you can view their details and source code.</p>
                
                <div class="simple-docs-grid">
                    <% projectsWithoutDocs.forEach(project => { %>
                    <div class="simple-doc-card">
                        <div class="simple-header">
                            <span class="doc-stage"><%= project.stage %></span>
                            <h4><%= project.title %></h4>
                        </div>
                        <div class="simple-links">
                            <a href="/projects/<%= project.id %>" class="simple-link">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <circle cx="12" cy="12" r="10"/>
                                    <line x1="12" y1="16" x2="12" y2="12"/>
                                    <line x1="12" y1="8" x2="12.01" y2="8"/>
                                </svg>
                                Details
                            </a>
                            <a href="<%= project.githubUrl %>" target="_blank" class="simple-link">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                                </svg>
                                GitHub
                            </a>
                            <a href="<%= project.liveUrl %>" target="_blank" class="simple-link">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                                    <polyline points="15 3 21 3 21 9"/>
                                    <line x1="10" y1="14" x2="21" y2="3"/>
                                </svg>
                                Live
                            </a>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
            <% } %>
        </div>
    </section>

    <%- include('partials/footer') %>
</body>
</html>

<style>
.api-docs-section {
    padding: 4rem 0;
    min-height: 100vh;
}

.api-hero {
    text-align: center;
    margin-bottom: 4rem;
}

.docs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
}

.doc-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 1rem;
    padding: 2rem;
    transition: all 0.3s;
    display: flex;
    flex-direction: column;
}

.doc-card:hover {
    transform: translateY(-5px);
    border-color: var(--primary);
    box-shadow: 0 20px 40px var(--shadow);
}

.doc-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.doc-stage {
    background: rgba(99, 102, 241, 0.1);
    color: var(--primary);
    padding: 0.25rem 0.75rem;
    border-radius: 2rem;
    font-size: 0.85rem;
    font-weight: 600;
}

.doc-links {
    display: flex;
    gap: 0.5rem;
}

.icon-link {
    color: var(--text-muted);
    padding: 0.5rem;
    border-radius: 0.5rem;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
}

.icon-link:hover {
    background: var(--bg-hover);
    color: var(--primary);
}

.doc-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--text-primary);
}

.doc-description {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    flex-grow: 1;
}

.doc-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
}

.tech-badge {
    background: rgba(139, 92, 246, 0.1);
    color: var(--secondary);
    padding: 0.25rem 0.75rem;
    border-radius: 0.5rem;
    font-size: 0.85rem;
    font-weight: 500;
}

.tech-badge.more {
    background: rgba(236, 72, 153, 0.1);
    color: var(--accent);
}

.doc-endpoints {
    background: rgba(99, 102, 241, 0.03);
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    padding: 1rem;
    margin-bottom: 1.5rem;
}

.doc-endpoints h4 {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
}

.doc-endpoints ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.doc-endpoints li {
    margin-bottom: 0.5rem;
}

.doc-endpoints li:last-child {
    margin-bottom: 0;
}

.doc-endpoints code {
    background: var(--bg-dark);
    color: var(--primary);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-family: 'Courier New', monospace;
    font-size: 0.85rem;
}

.more-endpoints {
    color: var(--text-muted);
    font-size: 0.85rem;
    font-style: italic;
}

.doc-actions {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.doc-actions .btn-primary,
.doc-actions .btn-secondary {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

/* Projects without docs */
.no-docs-section {
    margin-top: 4rem;
    padding-top: 3rem;
    border-top: 2px solid var(--border);
}

.section-heading {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--text-primary);
}

.section-note {
    color: var(--text-muted);
    margin-bottom: 2rem;
    font-size: 1rem;
}

.simple-docs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
}

.simple-doc-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    padding: 1.5rem;
    transition: all 0.3s;
}

.simple-doc-card:hover {
    border-color: var(--primary);
    transform: translateY(-3px);
    box-shadow: 0 10px 20px var(--shadow);
}

.simple-header {
    margin-bottom: 1rem;
}

.simple-header h4 {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-top: 0.5rem;
}

.simple-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

.simple-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s;
}

.simple-link:hover {
    color: var(--primary);
}

/* Responsive */
@media (max-width: 768px) {
    .docs-grid {
        grid-template-columns: 1fr;
    }
    
    .simple-docs-grid {
        grid-template-columns: 1fr;
    }
    
    .doc-actions {
        flex-direction: column;
    }
}

@media (max-width: 480px) {
    .doc-card {
        padding: 1.5rem;
    }
    
    .doc-title {
        font-size: 1.25rem;
    }
}
</style>